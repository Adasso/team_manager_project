<p id="notice"><%= notice %></p>

<h1>Userstats</h1>

<table>
  <thead>
    <tr>
      <th>Games played</th>
      <th>Minutes played</th>
      <th>Goals</th>
      <th>Yellow cards</th>
      <th>Red cards</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @userstats.each do |userstat| %>
      <tr>
        <td><%= userstat.games_played %></td>
        <td><%= userstat.minutes_played %></td>
        <td><%= userstat.goals %></td>
        <td><%= userstat.yellow_cards %></td>
        <td><%= userstat.red_cards %></td>
        <td><%= link_to 'Show', userstat %></td>
        <td><%= link_to 'Edit', edit_userstat_path(userstat) %></td>
        <td><%= link_to 'Destroy', userstat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Userstat', new_userstat_path %>
